1) a) #include <iostream>
#include <string>
using namespace std;

int main() {
    string s1 = "Hello";
    string s2 = "World";
    s1 += s2;
    cout << s1 << endl;
    return 0;
}
OUTPUT:
HelloWorld

b)#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main() {
    string s = "OpenAI";
    reverse(s.begin(), s.end());
    cout << s << endl;
    return 0;
}
OUTPUT:
IAnepO

C)#include <iostream>
#include <string>
using namespace std;

int main() {
    string s = "Beautiful Day";
    string result = "";
    for (char c : s) {
        if (!(c=='a'||c=='e'||c=='i'||c=='o'||c=='u'||
              c=='A'||c=='E'||c=='I'||c=='O'||c=='U')) {
            result += c;
        }
    }
    cout << result << endl;
    return 0;
}
OUTPUT:
Btfl Dy

D)#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main() {
    string arr[] = {"Banana", "Apple", "Mango", "Cherry"};
    int n = 4;
    sort(arr, arr + n);
    for (int i = 0; i < n; i++) {
        cout << arr[i] << endl;
    }
    return 0;
}
OUTPUT:
Apple
Banana
Cherry
Mango


E)#include <iostream>
using namespace std;

int main() {
    char ch = 'G';
    if (ch >= 'A' && ch <= 'Z') {
        ch = ch + 32;
    }
    cout << ch << endl;
    return 0;
}
OUTPUT:
g
